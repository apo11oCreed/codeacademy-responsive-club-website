@import url('https://fonts.googleapis.com/css2?family=Archivo:wght@400;700&display=swap');
@import "../../node_modules/normalize.css/normalize.css"
@import 'components/utility'
@import 'components/base'

section
    .txt
        max-width calc(50% - 1.5rem)
        float left
        margin-right 1.5rem
        @media screen and (max-width:767px)
            max-width 100%
            float none
            margin-right 0
    img
        float right
        max-width 50%
        @media screen and (max-width:767px)
            float none
            max-width 100%

.row
    margin 0 1.5rem

.circles
    display flex
    flex-direction row
    justify-content space-between
    .painting
        width 25%
        height auto
        &.create,&.blend,&.zone
            position relative
            p
                margin 0
                left 50%
                transform translateX(-50%)
                position absolute
                font-size 3.2rem
                txt_orange()
                font-weight 700
                text-align center
                line-height 1
                @media screen and (max-width:767px)
                    font-size 4.5vw
        &.create
            p
                bottom 0
        &.blend
            p
                bottom 43%
                color white
                @media screen and (max-width:767px)
                    bottom 35%
        &.zone
            p
                top 0
    @media screen and (max-width:767px)
        flex-direction column
        justify-content space-evenly
        align-items center
