*
    font-family 'Archivo', sans-serif

html
    font-size 62.5%
    @media screen and (max-width:767px)
        font-size 8px

body
    margin 0

h1,
h2
    txt_blue()
h1
    font-size 3.2rem
h2
    font-size 2.4rem
    margin-block-start 0
    margin-block-end 0
p,
a
    line-height 1.45
    font-size 1.6rem

ul
    padding-left 0
    li
        list-style-type none

header
    /* Permalink - use to edit and share this gradient: https://colorzilla.com/gradient-editor/#3a4982+51,2b3e89+100 */
    background #3a4982
    background -moz-linear-gradient(top,  #3a4982 75%, #2b3e89 100%)
    background -webkit-linear-gradient(top,  #3a4982 75%,#2b3e89 100%)
    background linear-gradient(to bottom,  #3a4982 75%,#2b3e89 100%)
    @media screen and (max-width:767px)
        background #3a4982
    nav
        padding 1rem
        display flex
        flex-direction row
        justify-content space-between
        align-items center
        .logo
            width 5rem
            @media screen and (max-width:767px)
                margin-bottom  2.4rem
        ul
            display flex
            flex-direction row
            justify-content flex-end
            margin 0
            margin-block-start 0
            margin-block-end 0
            padding-inline-start 0
            width 50%
            li
                flex 1 1 auto
                text-align right
                a
                    color white
                    &:hover
                        txt_orange()
        @media screen and (max-width:767px)
            flex-direction column
            ul
                width 100%
                justify-content space-between
                li
                    flex 0 0 auto

footer
    bg_orange()
    nav
        padding 1rem
        display flex
        flex-direction row
        justify-content space-between
        align-items center
        p
            color white
        ul
            display flex
            flex-direction row
            justify-content flex-end
            margin 0
            margin-block-start 0
            margin-block-end 0
            padding-inline-start 0
            width 50%
            li
                flex 1 1 auto
                text-align right
                a
                    color white
                    &:hover
                        txt_blue()
section
    margin 4rem 0
    display inline-block

section,
footer
    clear both

img
    max-width 100%
    height auto